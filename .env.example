# AI News Platform Environment Configuration
# Copy this file to .env and fill in your values

# Database
DATABASE_PATH=./data/ainews.db

# API Keys (optional; required for these sources to return items)
# Without tokens, github_ai_repos and qiita_llm stay Active with 0 items.
QIITA_API_TOKEN=your_qiita_token_here
GITHUB_TOKEN=your_github_token_here

# LLM API Keys (choose one based on config.yaml llm.provider)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Storage
SNAPSHOT_DIR=./data/snapshots
MAX_SNAPSHOT_AGE_DAYS=30

# Performance
LOG_LEVEL=INFO
ENABLE_PROFILING=false

# Next.js
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development
